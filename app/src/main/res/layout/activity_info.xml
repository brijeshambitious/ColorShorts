<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info"
    android:background="@drawable/gradient_animation"
    android:id="@+id/info_main_screen"
    >


    <TextView
        android:id="@+id/cc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-4dp"
        android:text="GAME INFO"
        android:textAlignment="center"
        android:textColor="@color/semiTransparentLayer"
        android:textSize="50sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/info_screen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/transparent_layer"
        android:layout_below="@id/cc_text"
        >

    <ImageView
        android:id="@+id/asdev_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="15dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"
        />

        <TextView
            android:id="@+id/asdev_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/asdev_logo"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:text="Mini Project - BCA"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dev_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/asdev_title"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:text="Developer : Brijesh Damani"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dev_name_text"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Email: brijeshambitious@gmail.com"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textIsSelectable="true"
            android:textSize="20sp" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:background="@color/transparent"
            android:text="Back"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20sp"
            />

    </RelativeLayout>




</RelativeLayout>